package exemplos;

public class ExemploSwitch {

	public static void main(String[] args) {
			int avaliacao = 2;
			
			
			
			switch (avaliacao) {
			case 0:
				System.out.println("Ruim");
				break;
			case 1:
				System.out.println("Regular");
				break;
			case 2:
				System.out.println("Bom");
				break;
			
			default:
				System.out.println("Opção inválida.");
				break;
			}
	}

}
